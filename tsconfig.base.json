{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "target": "ES2021",
    "module": "ESNext",
    "rootDir": ".",
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "paths": {
      "@effect/sqlite": ["./packages/sqlite/src/index.ts"],
      "@effect/sqlite-react": ["./packages/sqlite-react/src/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", "apps/**/node_modules"]
}
